<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-gray-50 shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-8">
        Here are our registered homes:
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
            <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-56 object-cover hover:opacity-90 transition-opacity">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3 hover:text-red-500 transition-colors"><%= home.houseName %></h3>
              <p class="text-gray-600 mb-4 flex items-center">
                <i class="fas fa-map-marker-alt mr-2 text-red-400"></i>
                <%= home.location %>
              </p>
              <div class="flex justify-between items-center mb-4">
                <span class="text-lg font-bold text-red-500">â‚¹<%= home.price %> <span class="text-sm text-gray-500">/ night</span></span>
                <div class="flex items-center bg-yellow-50 px-3 py-1 rounded-full">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700 font-medium"><%= home.rating %></span>
                </div>
              </div>
              <div class="flex items-center justify-between gap-4 mt-6 border-t pt-4">
                <a href="/homes/<%= home._id %>" class="flex-1 bg-blue-500 text-white text-center py-2 px-4 rounded-lg font-semibold hover:bg-blue-600 transition-colors">Details</a>
                <div class="flex-none">
                  <%- include('../partials/favourite', {home: home}) %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>